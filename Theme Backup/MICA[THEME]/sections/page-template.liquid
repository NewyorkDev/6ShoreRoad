<div data-section-id="{{ section.id }}" data-section-type="page-template">

  {%- assign sidebarHeading = section.settings.title | escape -%}
  {%- assign sidebarContent = section.settings.content -%}

  {%- if sidebarHeading != blank or sidebarContent != blank -%}
    {%- assign hasSidebar = true -%}
  {%- else -%}
    {%- assign hasSidebar = false -%}
  {%- endif -%}

  <main  class="content content-area">

    {% include 'breadcrumbs' %}
    
     
    {% if page.title == 'Story' %}
    
        <style>
     /*   .page-title {
            border-bottom: 4px solid #ceb3aa;
        }*/
        </style>
    
    {% endif %}
    
    
     
    
    

    <div class="page-title">
      {% if page.title == "Contact" or 'Size Guide' or  page.title == 'Terms of Service' or  page.title == 'Story'%}
      
      {% else %}
      <h1 class="label">{{ page.title }}</h1>
      {% endif %}
    </div>
    
    
    {% if page.title == 'Story' %}
    <div style= " text-align: center; padding-left:20%; padding-right:20%;"class="text-content-wrap clearfix">
      
      <div  class="rte clearfix text-content {% if hasSidebar %}has-sidebar{% endif %}">
        {{ page.content }}
      </div>

      {% if hasSidebar %}
        <div class="sidebar rte">
          {% if sidebarHeading != blank %}
            <h2 class="title">{{ sidebarHeading }}</h2>
          {% endif %}

          {% if sidebarContent.size > 0 %}
            {{ sidebarContent }}
          {% endif %}
        </div>
      {% endif %}

    </div>
    {% else %}
    
        <div class="text-content-wrap clearfix">
      
      <div class="rte clearfix text-content {% if hasSidebar %}has-sidebar{% endif %}">
        {{ page.content }}
      </div>

      {% if hasSidebar %}
        <div class="sidebar rte">
          {% if sidebarHeading != blank %}
            <h2 class="title">{{ sidebarHeading }}</h2>
          {% endif %}

          {% if sidebarContent.size > 0 %}
            {{ sidebarContent }}
          {% endif %}
        </div>
      {% endif %}

    </div>
    
    
    
    
    
    
    {% endif %}

  </main>

</div>

{% schema %}
{
  "name": "Static pages",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "header",
      "content": "Sidebar"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "content",
      "label": "Content"
    }
  ]
}

{% endschema %}