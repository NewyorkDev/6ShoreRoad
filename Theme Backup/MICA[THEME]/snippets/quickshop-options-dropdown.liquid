{% unless itemType.options.size == 1 and itemType.variants[0].title == 'Default Title' %}
  {% for option in itemType.options_with_values %}
    {% assign option_index = forloop.index0 %}
    {%- capture option_id -%}
      single-option-{{ qs_form_id }}-{{ option_index }}
    {%- endcapture -%}
   {% assign opt_name = option.name | downcase %}

   {% if opt_name == 'color' %}
 
    
  
              <div  class="inline-field-wrapper js-required">
      <label><strong>{{ option.name }}:</strong></label>
      <div class="select-wrapper parent">
        <label style="display: none;"
          class="select-text"
          for="{{ option_id }}"
          data-select-text>
          <span data-selected-option></span>
        </label>
        <select style="display: none;"
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ qs_form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>

    {% else %} 

         {% if option.name == 'Material' and option.values.size == 1 %}
           
              <div style="visibility: hidden;" class="inline-field-wrapper js-required">
      <label><strong>{{ option.name }}:</strong></label>
      <div class="select-wrapper">
        <label
          class="select-text"
          for="{{ option_id }}"
          data-select-text>
          <span data-selected-option></span>
        </label>
        <select
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ qs_form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>

    {% else %}
            {% if option.name == 'Material' and option.values.size > 1 %}
             
              <div style="margin-top: 30px;" class="inline-field-wrapper js-required">
      <label><strong>{{ option.name }}:</strong></label>
      <div class="select-wrapper">
        <label
          class="select-text"
          for="{{ option_id }}"
          data-select-text>
          <span data-selected-option></span>
        </label>
        <select
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ qs_form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>
      {% endif %}
    
     {% endif %}

     {% if option.name == 'Size' %}
     
             <div  class="inline-field-wrapper js-required">
      <label><strong>{{ option.name }}:</strong></label>
      <div style="width: 120px;!important" class="select-wrapper">
        <label
          class="select-text"
          for="{{ option_id }}"
          data-select-text>
          <span data-selected-option></span>
        </label>
        <select
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ qs_form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div> 

      {% endif %}

      

      
   {% endif %}
    
  {% endfor %}
{% endunless %}
