<style>
  .select-wrapper {
  width: 120px;
  }
</style>

{% unless product.options.size == 1 and product.variants[0].title == 'Default Title' %}
  {% for option in product.options_with_values %}
    {% assign option_index = forloop.index0 %}
    {%- capture option_id -%}
      single-option-{{ form_id }}-{{ option_index }}
    {%- endcapture -%}

	{% assign opt_name = option.name | downcase %}
	

{% if opt_name == 'color' %}

  
    <div class="inline-field-wrapper js-required">
      <label><strong>{{ option.name }}:</strong></label>
      <div class="selector-wrapper" style="display: inline-block !important;">
        <select
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>

	{% else %}
      
      {% if option.name == 'Material' and option.values.size == 1 %}
      
